package phaserHaxe.gameobjects.graphics.typedefs;

/**
 * Graphics line style (or stroke style) settings.
 *
 * @since 1.0.0
**/
typedef LineStyle =
{
	/**
	 * The stroke width.
	 *
	 * @since 1.0.0
	**/
	public var width:Float;

	/**
	 * The stroke color.
	 *
	 * @since 1.0.0
	**/
	public var color:Int;

	/**
	 * The stroke alpha.
	 *
	 * @since 1.0.0
	**/
	public var alpha:Float;
};
