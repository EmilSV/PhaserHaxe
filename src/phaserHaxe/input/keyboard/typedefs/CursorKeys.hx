package phaserHaxe.input.keyboard.typedefs;

import phaserHaxe.input.keyboard.keys.Key;

/**
 * @since 3.0.0
**/
typedef CursorKeys =
{
	/**
	 * A Key object mapping to the UP arrow key.
	 *
	 * @since 1.0.0
	**/
	public var ?up:Key;

	/**
	 * A Key object mapping to the DOWN arrow key.
	 *
	 * @since 1.0.0
	**/
	public var ?down:Key;

	/**
	 * A Key object mapping to the LEFT arrow key.
	 *
	 * @since 1.0.0
	**/
	public var ?left:Key;

	/**
	 * A Key object mapping to the RIGHT arrow key.
	 *
	 * @since 1.0.0
	**/
	public var ?right:Key;

	/**
	 * A Key object mapping to the SPACE BAR key.
	 *
	 * @since 1.0.0
	**/
	public var ?space:Key;

	/**
	 * A Key object mapping to the SHIFT key.
	 *
	 * @since 1.0.0
	**/
	public var ?shift:Key;
};
